<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- estilo do content, relative -->
    <style name="contentStyle">
		<item name="android:background">#F5F5F5</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">top</item>
    </style>

    <!--  estilo do speech button -->
    <style name="speechButtonStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/speechbutton</item>
        <item name="android:onClick">speechButtonClick</item>
    </style>

    <!--  estilo do speech result -->
    <style name="speechResultStyle">
       	<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:layout_alignLeft">@+id/logoImage</item>
    </style>

</resources>