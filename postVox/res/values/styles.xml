<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- estilo do content, relative -->
    <style name="contentStyle">
		<item name="android:background">#F5F5F5</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">top</item>
    </style>

    <!--  estilo do logo -->
    <style name="logoStyle">
       	<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/icon</item>
    </style>

    <!--  estilo do speech button -->
    <style name="speechButtonStyle">
       	<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignTop">@+id/logoImage</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/speechbutton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:onClick">speechButtonClick</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/speechButton</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--  estilo do speech result -->
    <style name="speechResultStyle">
       	<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:layout_alignLeft">@+id/logoImage</item>
    </style>

</resources>